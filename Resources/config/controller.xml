    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ornicar_message.controller.message.class">Bundle\Ornicar\MessageBundle\Controller\MessageController</parameter>
    </parameters>

    <services>
        <service id="ornicar_message.controller.message" class="%ornicar_message.controller.message.class%">
